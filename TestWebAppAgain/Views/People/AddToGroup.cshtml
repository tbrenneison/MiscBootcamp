 @model TestWebAppAgain.Models.Person 

@{
    ViewBag.Title = "Add User To Group";
}

<h2>Add To Group</h2>
<hr />

@using (Html.BeginForm("AddToGroup"))
{
    @Html.AntiForgeryToken()

    <div>
        <h4>Groups @Html.DisplayFor(model => model.FirstName) is already in:</h4>
        <ul>
            @foreach (var item in Model.Groups)
            {
                <li>@Html.DisplayFor(modelItem => item.GroupName)</li>
            }
        </ul>
    </div>



    <div class="form-horizontal">
        <h4>Add @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName) To Group:</h4>
        
        @Html.HiddenFor(model => model.PersonId)
        
        <div class="form-group">
		<label>Group: </label>
		<!--@Html.TextBox("Group")-->
        @Html.DropDownList("AllGroups", String.Empty) 
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add To Group" class="btn btn-default" />
            </div>
        </div>
    </div>

    
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>