@model IEnumerable<LibraryApp.Models.Checkout>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Book.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patron.FirstName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Book.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patron.FirstName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.CheckoutID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.CheckoutID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.CheckoutID })
                </td>
            </tr>
        }

    </table>
